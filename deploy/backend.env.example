# Backend env template for remote deploy. Copy to /etc/project_inside/backend.env or use with --backend-env.
# Do not commit real secrets. See backend/.env.example for full list.

# Application
APP_NAME=Project Inside API
APP_VERSION=0.1.0
DEBUG=false

# Database (match postgres from docker-compose.prod.yml on host)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/project_inside
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_QUEUE_URL=redis://localhost:6379/1

# Security (REQUIRED: set a strong SECRET_KEY in production)
SECRET_KEY=change-me-in-production-use-a-secure-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS (JSON array; include your frontend origin, e.g. https://your-domain.com)
CORS_ORIGINS=["http://localhost:*","http://127.0.0.1:*","http://192.168.*.*:*"]

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_TIMEOUT=60
NUDGE_RATE_LIMIT_SECONDS=10
SPEAKING_RATE_THRESHOLD=3.0
OVERLAP_RATIO_THRESHOLD=0.3

# Voiceprint (optional)
VOICEPRINT_API_URL=http://localhost:8005
VOICEPRINT_API_TOKEN=

# Realtime
SR_THRESHOLD=2.0
OR_THRESHOLD=0.25
STORE_FRAMES=false

# Email & App (APP_PUBLIC_URL = public URL for invite links)
APP_PUBLIC_URL=http://localhost:3000
EMAIL_BLOCKED_DOMAINS=
SENDGRID_API_KEY=
EMAIL_FROM_ADDRESS=noreply@projectinside.app
EMAIL_FROM_NAME=Project Inside

# GCP Speech-to-Text (optional)
STT_RECOGNIZER=
STT_SPEAKER_MATCH_THRESHOLD=0.3
STT_AUDIO_BUFFER_SECONDS=30
STT_ESCALATION_COOLDOWN_SECONDS=5
STT_ENABLE_NEMO_DIARIZATION_FALLBACK=true
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# LLM (optional)
GEMINI_API_KEY=
OPENAI_API_KEY=
